<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>The Blog | Blogs</title>
    <link rel="stylesheet" href="/stylesheets/blogs.css">
    <link rel="stylesheet" href="/stylesheets/header.css">
</head>
<body>

<%- include('partials/header', {email: email}); %>

<div class="container">
    <h2>All Blogs</h2>
    <a class="btn" href="/logout">Logout</a>
    <br>
    <a class="btn" href="/blogs/new">Create a new blog</a>

    <ul class="blog-list">
        <% blogs.forEach(blog => { %>
            <li class="blog-item">
                <h3>
                    <a class="blog-title" href="/blogs/<%= blog.id %>">
                        <%= blog.title %>
                    </a>
                </h3>
                <p class="blog-meta">
                    By <%= blog.author %> on <%= blog.date %>
                </p>
            </li>
        <% }) %>
    </ul>
</div>
</body>
</html>